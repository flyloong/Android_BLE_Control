            android:text="9" />

        <Space
            android:layout_width="30dp"
            android:layout_height="wrap_content" />
        
        <Button
            android:id="@+id/bgpio10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10" />
    </LinearLayout>

		<Button
		    android:id="@+id/gpioRead"
